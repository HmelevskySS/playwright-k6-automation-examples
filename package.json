{
  "name": "senior-qa-automation-performance",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready Playwright UI automation and k6 performance tests for Saucedemo + ReqRes.",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "HEADLESS=false npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "prettier": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\"",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report",
    "perf:test": "mkdir -p reports && k6 run --summary-export=reports/k6-summary.json api/performance/reqres-users.k6.js",
    "perf:test:quick": "mkdir -p reports && DURATION=1m k6 run --summary-export=reports/k6-summary.quick.json api/performance/reqres-users.k6.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "dotenv": "^17.3.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
